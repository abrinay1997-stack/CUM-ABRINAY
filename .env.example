GEMINI_API_KEY="MY_GEMINI_API_KEY"
APP_URL="MY_APP_URL"

# ─── Netlify Blobs ────────────────────────────────────────────────
# Site ID: Netlify → Site configuration → General → Site details
NETLIFY_SITE_ID=tu-site-id
# Personal Access Token: Netlify → Avatar → User settings → Applications → New access token
NETLIFY_TOKEN=tu-personal-access-token

# ─── Email (Gmail SMTP) ───────────────────────────────────────────
# Cuenta Gmail desde la que se envían los correos del evento
GMAIL_USER=tuemail@gmail.com
# App Password de Google (no es tu contraseña normal)
# Generar en: https://myaccount.google.com/apppasswords
GMAIL_APP_PASSWORD=xxxx-xxxx-xxxx-xxxx

# Email admin que recibe notificaciones de nuevos registros
ADMIN_EMAIL=tuemail@gmail.com
